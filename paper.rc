# lines
lines.linewidth: 1

# scatter

# ticks
xtick.direction: in
ytick.direction: in
xtick.top: True
ytick.right: True
axes.labelpad: 2.0
axes.axisbelow: True

# fonts
font.family: sans-serif
font.sans-serif: Helvetica
text.usetex: False
font.size: 14
axes.labelsize: 14
legend.fontsize: 14
xtick.labelsize: 12
ytick.labelsize: 12
